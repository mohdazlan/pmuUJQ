<div>
<label>Title</label>
<input type="text" name="title" value="<%= document.title  %> ">

<label>Author</label>
<select name="author">
<% authors.forEach(author => { %>
<% if(author.id === document.author) { %>
<option selected label="<%= author.name  %> " value="<%= author.id  %>"></option>
<% } else { %>
<option label="<%= author.name  %> " value="<%= author.id  %>"></option>
<% } %>
<% }) %>
</select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%= document.publishDate == null ? '' : 
document.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= document.pageCount %>">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div> 
<div>
    <label>Description</label>
    <textarea name="description"><%= document.description %></textarea>
</div>